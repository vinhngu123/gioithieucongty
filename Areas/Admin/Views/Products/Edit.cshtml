@using startup.Models.products;
@using startup.Utilities;
@model ProductModel;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sử sản phẩm</h2>
    </div>
    <form asp-area="admin" asp-controller="products" asp-action="update" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Name">Tên sản phẩm</label>
                <input type="text" class="form-control mb-3" asp-for="Name">
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Chip">Chíp xử lí</label>
                    <input type="text" class="form-control mb-3" asp-for="Chip">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Ram">Ram</label>
                    <input type="text" class="form-control mb-3" asp-for="Ram">
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Rom">Rom</label>
                    <input type="text" class="form-control mb-3" asp-for="Rom">
                </div>
                </divv>

                <div class="row">
                    <div class="from-group col-md-4">
                        <label class="control-lable">Hình ảnh sản phẩm</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-success" type="button" onclick="openDialog()">
                                    Choose a
                                    pic
                                </button>
                            </div>
                            <input type="text" class="form-control" asp-for="Image" id="file_input"
                                   aria-describedby="button-addon2">
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="Price">Giá sản phẩm</label>
                        <input type="" class="form-control mb-3" asp-for="Price">
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Quantity">Số lượng</label>
                        <input type="number" class="form-control mb-3" asp-for="Quantity">
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Description">Mô tả sản phẩm</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-arrow-left-fill"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash-fill"></i> Thêm sản phẩm
            </button>
    </form>
</main>


@{
    var summernote = new startup.Areas.Admin.Models.Summernote("#Description");

}
<partial name="_Summernote" model="summernote" />