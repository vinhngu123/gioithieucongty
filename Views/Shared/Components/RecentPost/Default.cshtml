@using startup.Models;
@using startup.Utilities;
@model IList<Post>

                <!-- Recent Post Start -->
<div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
    <div class="text-center">
        <h3 class="mb-0 text-white mb-3">Bài đăng gần đây</h3>
    </div>
    @foreach(var item in Model)
    {
        string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
        <div class="d-flex rounded overflow-hidden mb-3" style="    width: 100%;
    justify-content: center;">
            <img class="img-fluid" src="@item.Images" style="width: 100px; height: 100px; object-fit: cover;" alt="" >
            <a href="/@url" class="h5 fw-semi-bold d-flex align-items-center bg-light px-3 mb-0 w-75">@item.Title</a>
        </div>
    }
</div>
<!-- Recent Post End -->